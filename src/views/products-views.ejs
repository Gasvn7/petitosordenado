<head>
    <%- include('partials/head', {title: "Listado de productos" }) %>
</head>

<%- include('partials/header') %>
    <table id="customers">
        <tr>
            <th>id</th>
            <th>Nombre</th>
            <th>Stock</th>
            <th>Imagen</th>
            <th>Detalles</th>
            <th>Precio</th>
            <th>Talles</th>
            <th>Categor√≠a</th>
            <th>Acciones</th>
        </tr>

        <tr>
            <% products.forEach((produc)=>{ %>
        <tr>

            <td class="iddd">
                <%= produc.id %>
            </td>
            <td>
                <%= produc.name %>
            </td>
            <td>
                <%= produc.stock %>
            </td>
            <td class="td-img"> <img class="product-img" src="/img/pruebas/<%= produc.image %>"
                    alt=" Imagen de <%=produc.name%>">
            </td>
            <td>
                <%= produc.details%>
            </td>
            <td>
                <%= produc.price%>
            </td>
            <td>
                <%= produc.size%>
            </td>
            <td>
                <%= produc.category%>
            </td>
            <td>
                <script src="editar/<%= produc.id %>"></script>
                <a href="editar/<%= produc.id %>"><button>Editar</button></a>
                <form action="/products/listado/destruir/<%= produc.id %>?_method=DELETE" method="POST">
                    <button class="btn-crud" type="submit">Eliminar</button>
                </form>
            </td>
        </tr>
        <% }) %>

    </table>
    <%- include('partials/footer') %>
        </body>

        </html>