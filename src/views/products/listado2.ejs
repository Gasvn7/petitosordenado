        <div class="customers">
            <% producto.forEach((producto)=>{ %>
                <div class="card-wrapper-list">
                    <div class="content-list">
                        <p>Nombre:
                        <h4>
                            <%= producto.name %>
                        </h4>
                        </p>
                        <p>ID:
                        <h4>
                            <%= producto.id %>
                        </h4>
                        </p>
                        <p>Imagen:
                        <h4><img class="product-img" src="/img/usersImages/<%= producto.image %>"
                                alt="<%= producto.image%>"></h4>
                        </p>
                        <p>Stock:
                        <h4>
                            <%= producto.quantity %>
                        </h4>
                        </p>
                        <p>Detalles:
                        <h4>
                            <%= producto.details%>
                        </h4>
                        </p>
                        <p>Precio:
                        <h4>
                            <%= producto.price%>
                        </h4>
                        </p>
                        <p>Marca:
                        <h4>
                            <%= producto.brand%>
                        </h4>
                        </p>

                        <p>Talle:
                        <h4>
                            <%= producto..size%>
                        </h4>
                        </p>
                        <p>Categoría:
                        <h4>
                            <%= producto.categories.category%>
                        </h4>
                        </p>
                        <div class="buttons-list">
                            <a href="detalle/<%= producto.id %>"><button id="botones-listado">Ver</button></a>

                            <% if (locals.isLogged) { %>
                                <a href="editar/<%= producto.id %>"><button id="botones-listado">Editar</button></a>
                                <form action="/products/destruir/<%= producto.id %>?_method=DELETE" method="POST">
                                    <button type="submit" id="botones-listado">Eliminar</button>
                                </form>
                                <% } %>

                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    </body>
    <%- include('../partials/footer') %>

        </html>