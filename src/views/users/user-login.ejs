<head>
  <%- include('../partials/head', {title: "Login" }) %>
</head>

<%- include('../partials/header') %>
  <!----Formulario-login-->
  <main class=" main-register-login">
    <form action="/users/login" class="form-login" method="POST">
      <div class="container">
        <h1>Ingresa</h1>
        <p>Por favor complete el formulario para ingresar.</p>
        <hr>

        <label for="email">Correo electrónico</label>
        <input class="input" type="email" name="email">
        <div class="text-danger-email">
          <% if (locals.errors && errors.email) { %>
            
              <%= errors.email.msg %>
           
            <% } %>
        </div>
        <label for="password">Contraseña</label>
        <input class="input" type="password" name="password" value="">
        <div class="text-danger-password">
          <% if (locals.errors && errors.password) { %>
            <span>
              <%= errors.password.msg %>
            </span>
            <% } %>
        </div>

        <label for="checkbox">
          <input type="checkbox" class="checkbox" name="remember_user">Recordar mi usuario
        </label>

        <div class="text-danger-text">
          <% if (locals.errors && errors.text) { %>
            <span>
              <%= errors.text.msg %>
            </span>
            <% } %>
        </div>
        <div class="clearfix">
          <button class="login-button" type="submit">Ingresar</button>
          <a href="/users/register" class="register-button">
            Registrarme
          </a>
        </div>
      </div>
    </form>
  </main>
<!--   <script src="/js/validationsLogin.js"></script> -->
  </body>
  <%- include('../partials/footer') %>

    </html>