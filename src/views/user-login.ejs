<%- include('partials/head', {title: "Login" }) %>
  <%- include('partials/header') %>
    <!----Formulario-login-->
    <main class=" main-register-login">
      <form action="/users/login" class="form-login" method="POST">
        <div class="container">
          <h1>Ingresa</h1>
          <p>Por favor complete el formulario para ingresar.</p>
          <hr>

          <label for="email">Correo electrónico:</label>
          <input class="input" type="email" name="email" id="email">
          <% if (locals.errors && errors.email) { %>
            <div class="text-danger">
              <a href="/users/register">
                <%= errors.email.msg %>
              </a>
            </div>
            <% } %>
              <label for="password">Contraseña:</label>
              <input class="input" type="password" name="password" id="password">
              <% if (locals.errors && errors.password) { %>
                <div class="text-danger">
                  <a href="/users/register">
                    <%= errors.password.msg %>
                  </a>
                </div>
                <% } %>

                  <label for="checkbox">
                    <input type="checkbox" class="checkbox" name="remember_user">Recordar mi usuario
                  </label>
                  

                  <div class="clearfix">
                    <button class="login-button" type="submit">Ingresar</button>
                    <a href="/users/register" class="register-button">
                      Registrarme
                    </a>
                  </div>
        </div>
      </form>
    </main>
    <%- include('partials/footer') %>
      </body>

      </html>